<Footer />

<style>
    * {
        list-style: none;
    }

    /*TODO:  buscador*/

    /* From Uiverse.io by satyamchaudharydev */
    .form {
        --width-of-input: 200px;
        --border-height: 1px;
        --border-before-color: rgba(221, 221, 221, 0.39);
        --border-after-color: #5891ff;
        --input-hovered-color: #4985e01f;
        position: relative;
        width: var(--width-of-input);
    }
    /* styling of Input */
    .input {
        color: #000000;
        font-size: 0.9rem;
        background-color: transparent;
        width: 100%;
        box-sizing: border-box;
        padding-left: 35px;
        padding-inline: 0.5em;
        padding-block: 0.7em;
        border: none;
        border-bottom: var(--border-height) solid var(--border-before-color);
    }
    /* styling of animated border */
    .input-border {
        position: absolute;
        background: var(--border-after-color);
        width: 0%;
        height: 2px;
        bottom: 0;
        left: 0;
        transition: 0.3s;
    }
    /* Hover on Input */
    input:hover {
        background: var(--input-hovered-color);
    }

    input:focus {
        outline: none;
    }
    /* here is code of animated border */
    input:focus ~ .input-border {
        width: 100%;
    }
    /* === if you want to do animated border on typing === */
    /* remove input:focus code and uncomment below code */
    /* input:valid ~ .input-border{
  width: 100%;
} */

    .search-container {
        position: relative;
        display: flex;
        align-items: center;
    }
    .search-icon {
        
        fill: #000000;
        width: 16px;
        height: 16px;
        pointer-events: none;
        z-index: 1;
    }

    /* todo demas */
    ul {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
    }

    .texto {
        font-weight: bold;
        color: #d90da2;
    }

    .icono {
        cursor: pointer;
    }
    .icono img:hover {
        transform: scale(1.1);
    }
    .categorias {
        display: flex;
        gap: 1rem;
        margin: 1rem 0;
    }

    .categoria-btn {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .categoria-btn.activo {
        background-color: #d90da2;
        color: white;
    }

    .grid-calendario {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        padding: 1rem;
    }
</style>
