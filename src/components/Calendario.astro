---

<!-- TODO: ESTE HEADER CAMBIA SEGUN EL USUARIO -->
<Header />
<Layout title="Novedades">
    <ul>
        <li class="texto"><h1>COMUNIDAD</h1></li>
        <div class="form">
            <div class="search-container">
                <svg viewBox="0 0 24 24" aria-hidden="true" class="search-icon">
                    <g>
